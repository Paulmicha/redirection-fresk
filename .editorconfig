root = true

[*]
indent_style = tab
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[{package.json,package-lock.json,README.md,*.yml,*.yaml}]
indent_style = space
indent_size = 2

[{*.md,*.markdown}]
trim_trailing_whitespace = false

[*.webmanifest]
indent_style = space
indent_size = 4
